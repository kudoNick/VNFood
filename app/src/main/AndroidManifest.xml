<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.poly.jeanshop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/mua"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".src.module.explore.view.PhotoDetailActivity"></activity>
        <activity android:name=".src.module.profileDetail.ProfileActivity" />
        <activity android:name=".src.module.billDetail.view.BillDetailActivity" />
        <activity android:name=".src.module.bill.view.BillActivity" />
        <activity android:name=".src.module.explore.view.AllProductActivity" />
        <activity
            android:name=".NavigationActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".src.module.register.view.RegisterActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".src.module.explore.view.ProductDetailsActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".src.module.myorder.view.MyOrderActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".src.module.login.view.LoginActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".src.utils.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".src.module.cate.view.ProductForCateActivity" />
    </application>

</manifest>